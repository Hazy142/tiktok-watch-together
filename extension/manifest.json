{
  "manifest_version": 3,
  "name": "TikTok Watch Together",
  "version": "2.0.0",
  "description": "Watch TikTok videos together in real-time with screen sharing",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.tiktok.com/*",
    "http://localhost:3001/*",
    "http://localhost:5173/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.tiktok.com/*"
      ],
      "js": [
        "socket.io.min.js",
        "content.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TikTok Watch Together"
  }
}