{
    "manifest_version": 3,
    "name": "TikTok Watch Together",
    "version": "1.0",
    "description": "Watch TikToks in sync with friends!",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.tiktok.com/*",
        "http://localhost:3001/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.tiktok.com/*"
            ],
            "js": [
                "socket.io.min.js",
                "content.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "style.css",
                "socket.io.min.js"
            ],
            "matches": [
                "https://www.tiktok.com/*"
            ]
        }
    ]
}